{
	"name": "vscodeGoComment",
	"displayName": "GoComment",
	"description": "**GoComment** is a plugin for vscode, auto generate for golang function, variable, struct comments.",
	"version": "0.0.1",
	"icon": "https://raw.githubusercontent.com/0x00b/vscode-go-comment/master/pluginIcon.png",
	"engines": {
		"vscode": "^1.58.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vscodeGoComment.AutoComment",
		"onLanguage:go"
	],
	"main": "./out/extension.js",
	"contributes": { 
		"keybindings": [{
		  "command": "vscodeGoComment.AutoComment",
		  "key": "ctrl+alt+/",
		  "mac": "ctrl+cmd+/",
		  "when": "editorTextFocus && editorLangId == go"
		}],
		"configuration":{
			"title": "Go Comment Template",
			"properties": {
				"functionTemplate":{ 
					"type": "string",
					"default":"// ${func_name} \n//  @receiver ${receiver_name} \n//  @param ${param_name} \n//  @return ${return_name} "
				},
				"typeTemplate":{ 
					"type": "string",
					"default":"// ${type_name} "
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.58.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
