{
	"name": "vscodeGoComment",
	"displayName": "GoComment",
	"publisher": "lijunawk",
	"description": "GoComment can automatically generate comments for GO functions, variables and structs. github: https://github.com/0x00b/vscode-go-comment",
	"version": "0.2.2",
	"icon": "icon.png",
	"repository": {
		"url": "https://github.com/0x00b/vscode-go-comment"
	},
	"engines": {
		"vscode": "^1.58.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vscodeGoComment.AutoComment",
		"onLanguage:go"
	],
	"main": "./out/extension.js",
	"contributes": {
		"keybindings": [
			{
				"command": "vscodeGoComment.AutoComment",
				"key": "ctrl+alt+/",
				"mac": "ctrl+cmd+/",
				"when": "editorTextFocus && editorLangId == go"
			}
		],
		"configuration": {
			"title": "Go Comment Template",
			"properties": {
				"functionTemplate": {
					"type": "string",
					"default": "// ${func_name} \n//\t@param ${param_name} \n//\t@return ${return_name} \n"
				},
				"typeTemplate": {
					"type": "string",
					"default": "// ${type_name} "
				},
				"varTemplate": {
					"type": "string",
					"default": "// ${var_name} "
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.58.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"@vscode/vsce": "^3.2.1",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"moment": "^2.29.1"
	}
}
